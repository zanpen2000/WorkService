<Window x:Class="DesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.ignore.com"
        mc:Ignorable="d ignore"
        Height="300"
        Width="900"
        Title="{Binding WelcomeTitle}"
        DataContext="{Binding Main, Source={StaticResource Locator}}">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <WrapPanel x:Name="LayoutUserInfo" Grid.Row="0" >
            <TextBlock Text="编号："/>
            <TextBlock Text="{Binding UserInfo.number}" />
            <TextBlock Text="姓名：" />
            <TextBlock Text="{Binding UserInfo.name}"  />
            <TextBlock Text="部门:" />
            <TextBlock Text="{Binding UserInfo.departName}" />
            <TextBlock Text="上次登陆:" />
            <TextBlock Text="{Binding UserInfo.lastLogin}" />
            <TextBlock Text="邮箱:" />
            <TextBlock Text="{Binding UserInfo.mail}" />
            <TextBlock Text="密码:" />
            <TextBlock Text="{Binding UserInfo.mailpwd}" />
            <TextBlock Text="发送到:" />
            <TextBlock Text="{Binding UserInfo.mailto}" />
        </WrapPanel>
        <DataGrid Grid.Row="1" AutoGenerateColumns="True" ItemsSource="{Binding Diarys}" />
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Content="Add" Command="{Binding AddCommand}"/>
            <Button Content="Close" Command="{Binding CloseCommand}"/>
        </StackPanel>
        

    </Grid>
</Window>
